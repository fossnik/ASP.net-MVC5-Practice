@*@model Vidley.Models.Movie*@
@model Vidley.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    RazorView dynamically renders variables
*@

@{
    var myDynamicVariable = "RazorView";
}
<h3>This is a @myDynamicVariable</h3>

@{
    var className = Model.Customers.Count > 5 ? "popular" : null;
}
<h2 class ="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie yet.</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

